<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{1} - %msg%n</Pattern>
			</PatternLayout>
		</Console>

		<File name="File" fileName="logs/test-automation.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} - %level - %logger{1} - %msg%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
